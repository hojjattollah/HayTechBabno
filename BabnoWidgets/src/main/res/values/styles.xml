<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SearchViewIcon">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:paddingLeft">@dimen/search_icon_padding</item>
        <item name="android:paddingRight">@dimen/search_icon_padding</item>
        <item name="android:scaleType">center</item>
        <item name="android:alpha">0.54</item>
    </style>


    <style name="DemoButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#646f7c</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="AllStyles">
        <item name="cv_st_StrokeWidth">2dp</item>
        <item name="cv_st_StrokeColor">#00FFFF</item>
        <item name="cv_st_ColorBackground">#000</item>
        <item name="cv_st_Radius">12dp</item>
        <item name="cv_st_Font">@font/dosis</item>
        <item name="cv_st_TextSize">18sp</item>
        <item name="cv_st_TextColor">#ff0</item>
        <item name="cv_st_TextBold">true</item>
        <item name="cv_st_SolidBackground">true</item>
        <item name="cv_st_IconStart">@drawable/ic_close_black_24dp</item>
        <item name="cv_st_IconEnd">@drawable/ic_close_black_24dp</item>
        <item name="cv_st_Length">SHORT</item>
    </style>


    <style name="BaseStyleableToast">
        <item name="cv_st_Length">SHORT</item>
    </style>

    <style name="ColoredStroke" parent="BaseStyleableToast">
        <item name="cv_st_StrokeWidth">2dp</item>
        <item name="cv_st_StrokeColor">#ff00</item>
    </style>

    <style name="ColoredBackground" parent="BaseStyleableToast">
        <item name="cv_st_ColorBackground">#FF5A5F</item>
    </style>

    <style name="ColoredText" parent="BaseStyleableToast">
        <item name="cv_st_TextColor">#FF5A5F</item>
    </style>

    <style name="ColoredBoldText" parent="BaseStyleableToast">
        <item name="cv_st_TextColor">#FF5A5F</item>
        <item name="cv_st_TextBold">true</item>
    </style>

    <style name="CustomFont" parent="BaseStyleableToast">
        <item name="cv_st_Font">@font/dosis</item>
    </style>

    <style name="CornerRadius5Dp" parent="BaseStyleableToast">
        <item name="cv_st_Radius">5dp</item>
    </style>

    <style name="IconStart" parent="BaseStyleableToast">
        <item name="cv_st_IconStart">@drawable/ic_close_black_24dp</item>
    </style>

    <style name="IconEnd" parent="BaseStyleableToast">
        <item name="cv_st_IconEnd">@drawable/ic_close_black_24dp</item>
    </style>

    <style name="IconStartEnd" parent="BaseStyleableToast">
        <item name="cv_st_IconStart">@drawable/ic_close_black_24dp</item>
        <item name="cv_st_IconEnd">@drawable/ic_close_black_24dp</item>
    </style>

    <style name="MultiButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/button_color_blue</item>
        <item name="android:colorBackground">@color/button_color_blue</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>

    </style>

</resources>